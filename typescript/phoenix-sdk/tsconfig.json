{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "types": ["mocha", "node"],
    "paths": {
      "@instructions/*": ["instructions/*"],
      "@types/*": ["types/*"]
    },
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "examples/**/*.ts"]
}
